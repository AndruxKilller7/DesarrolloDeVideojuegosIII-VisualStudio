@model WebApplication3.Models.Players

@{
    ViewData["Title"] = "CreatePlayer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreatePlayer</h1>

<h4>Players</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointsXP" class="control-label"></label>
                <input asp-for="PointsXP" class="form-control" />
                <span asp-validation-for="PointsXP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking" class="control-label"></label>
                <input asp-for="Ranking" class="form-control" />
                <span asp-validation-for="Ranking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skins" class="control-label"></label>
                <input asp-for="Skins" class="form-control" />
                <span asp-validation-for="Skins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achivements" class="control-label"></label>
                <input asp-for="Achivements" class="form-control" />
                <span asp-validation-for="Achivements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Items" class="control-label"></label>
                <input asp-for="Items" class="form-control" />
                <span asp-validation-for="Items" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lifes" class="control-label"></label>
                <input asp-for="Lifes" class="form-control" />
                <span asp-validation-for="Lifes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStateOfProgress" class="control-label"></label>
                <input asp-for="CurrentStateOfProgress" class="form-control" />
                <span asp-validation-for="CurrentStateOfProgress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexPlayer">Back to List</a>
</div>

