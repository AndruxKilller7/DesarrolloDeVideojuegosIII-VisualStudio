@model IEnumerable<WebApplication3.Models.Achievements>
@{
    ViewData["Title"] = "IndexAchievements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Logros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="CreateAchievement" asp-controller="Achievements">Agregar nuevo Logro</a>
        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.IdPlayer) </th>
                        <th>@Html.DisplayNameFor(m => m.Name) </th>
                        <th>@Html.DisplayNameFor(m => m.Grade) </th>
                        <th>@Html.DisplayNameFor(m => m.RegistrationDate) </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdPlayer</td>
                            <td>@item.Name</td>
                            <td>@item.Grade</td>
                            <td>@item.RegistrationDate</td>
                            <td>
                                <a asp-controller="Achievements" asp-action="EditAchievement" asp-route-id="@item.IdPlayer" class="btn btn-warning">Edit</a>
                                <a asp-controller="Achievements" asp-action="DeleteAchievement" asp-route-id="@item.IdPlayer" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>


